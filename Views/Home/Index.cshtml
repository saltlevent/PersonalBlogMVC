

@model List<PostModel>
@{
    ViewData["Title"] = "Home Page";
}

	 <!-- Preloader Start -->
     <div class="preloader">
	   <div class="rounder"></div>
      </div>
      <!-- Preloader End -->
      
      
    
    
    <div id="main">
        <div class="container col-md-12">
            <div class="row">
            	
               
                

                                    <!-- Blog Post Start -->
                                    @foreach(var item in @Model)
                                {
                                <div class="col-xs-12 col-sm-8 col-md-12 blog-post">
                                    <div class="post-title">
                                      @Html.ActionLink(@item.Title,"PostSingle",new {PostId=item.Id},new {@class="h1"})
                                    </div>  
                                    <div class="post-info">
                                    	<span>@(item.Date.HasValue ? item.Date.Value.ToLongDateString(): "empty time") / by <a href="@Url.Action("ProfileAuthor",new {AuthorId=item.AuthorId})" target="_blank"> @SQLOps.GetAuthorById(item.AuthorId).Name </a></span>
                                    </div>  
                                    <p> @(item.Content.Length > 500 ? @item.Content.Substring(0,500) : @item.Content ) ...</p>                   
                                    @Html.ActionLink("Read More","PostSingle",new {PostId=item.Id}, new { @class = "button button-style button-anim fa fa-long-arrow-right"})
                                </div>

                                }
                                <!-- Blog Post End -->

                                <div class="col-md-12 text-center">
                                 <a href="javascript:void(0)" id="load-more-post" class="load-more-button">Load</a>
                                 <div id="post-end-message"></div>
                                </div>
                                
                             </div>
                              
                         </div>
                         
                        
                        
                        <!-- Subscribe Form Start -->
                        <div class="col-md-8 col-md-offset-2">
                           <form id="mc-form" method="post" action="http://uipasta.us14.list-manage.com/subscribe/post?u=854825d502cdc101233c08a21&amp;id=86e84d44b7">
								
						  <div class="subscribe-form margin-top-20">
							 <input id="mc-email" type="email" placeholder="Email Address" class="text-input">
							  <button class="submit-btn" type="submit">Submit</button>
								</div>
                                <p>Subscribe to my weekly newsletter</p>
								<label for="mc-email" class="mc-label"></label>
							  </form>
                             
                           </div>
                           <!-- Subscribe Form End -->
                           
                         </div>
                     
    
    
    <!-- Back to Top Start -->
    <a href="#" class="scroll-to-top"><i class="fa fa-long-arrow-up"></i></a>
    <!-- Back to Top End -->
    
    
    <!-- All Javascript Plugins  -->
    <script type="text/javascript" src="~/js/jquery.min.js"></script>
    <script type="text/javascript" src="~/js/plugin.js"></script>
    
    <!-- Main Javascript File  -->
    <script type="text/javascript" src="~/js/scripts.js"></script>